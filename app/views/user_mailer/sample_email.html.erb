<h1>Hello, </h1>
  <p>
    You have successfully placed an order.
    Here is the order information:<br>
  </p>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <%# <th>Unit Price</th> %>
          <th>Price</th>
          <th>Quantity</th>
        </tr>
      </thead>
      <tbody>
        <% @order_total = 0 %>
        <% @order.line_items.each do |line_item| %>
          <%= render 'item', line_item: line_item %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3">
            TOTAL:
          </th>
          <th>
            <%= @order_total %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

<p>Thanks for ordering and have a great day!</p>